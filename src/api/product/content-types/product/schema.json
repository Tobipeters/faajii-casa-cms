{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string"
    },
    "Slug": {
      "type": "uid",
      "targetField": "Name"
    },
    "Description": {
      "type": "richtext"
    },
    "Price": {
      "type": "decimal"
    },
    "DiscountPrice": {
      "type": "decimal"
    },
    "Currency": {
      "type": "string"
    },
    "Images": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "Stock": {
      "type": "integer"
    },
    "IsFeatured": {
      "type": "boolean"
    },
    "IsActive": {
      "type": "boolean"
    }
  }
}
