{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "customerDetails": {
      "type": "component",
      "component": "customer.customer",
      "repeatable": false
    },
    "items": {
      "type": "component",
      "component": "order-items.items",
      "repeatable": true
    },
    "subTotal": {
      "type": "decimal",
      "required": true
    },
    "shippingFee": {
      "type": "decimal",
      "required": true
    },
    "tax": {
      "type": "decimal"
    },
    "totalAmount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string"
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "Paystack",
        "Cash"
      ]
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Paid",
        "Failed",
        "Refunded"
      ]
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "Processing",
        "Shipped",
        "Delivered",
        "Cancelled"
      ]
    },
    "shippingAddress": {
      "type": "component",
      "component": "address.shipping-address",
      "repeatable": false
    },
    "billingAddress": {
      "type": "component",
      "component": "address.shipping-address",
      "repeatable": false
    },
    "note": {
      "type": "richtext"
    },
    "reference": {
      "type": "string",
      "required": true,
      "unique": true
    }
  }
}
